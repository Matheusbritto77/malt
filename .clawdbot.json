{
    "gateway": {
        "mode": "local",
        "bind": "lan",
        "port": 18789,
        "auth": {
            "mode": "token",
            "token": "admin123"
        },
        "controlUi": {
            "enabled": true,
            "dangerouslyDisableDeviceAuth": true,
            "allowInsecureAuth": true
        },
        "trustedProxies": [
            "10.0.1.4"
        ]
    },
    "logging": {
        "redactSensitive": "off"
    },
    "channels": {
        "defaults": {
            "groupPolicy": "open"
        },
        "whatsapp": {
            "dmPolicy": "open",
            "groupPolicy": "open",
            "allowFrom": [
                "*"
            ]
        }
    },
    "agents": {
        "defaults": {
            "workspace": "/app/data/clawd",
            "sandbox": {
                "mode": "off"
            }
        }
    }
}